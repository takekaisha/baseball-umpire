<%- model_class = Tournament -%>
<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:tournament_date) %></th>

            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @tournaments.each do |tournament| %>
            <tr>
              <td><%= link_to tournament.id, tournament_path(tournament) %></td>
              <td><%= tournament.tournament_date %></td>

              <td>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_tournament_path(tournament), :class => 'btn btn-primary btn-xs' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            tournament_path(tournament),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-danger btn-xs' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= link_to t('.new', :default => t("helpers.links.new")),
                  new_tournament_path,
                  :class => 'btn btn-primary' %>
    </div>
  </div>
</div>